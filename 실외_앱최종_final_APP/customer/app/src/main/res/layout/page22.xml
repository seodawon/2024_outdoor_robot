<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="150dp"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".main_customer">
        <!-- 맨위 아이콘들 -->
        <LinearLayout android:id="@+id/vw_1" android:layout_width="match_parent" android:layout_height="0dp" android:orientation="horizontal" android:background="@android:color/transparent" app:layout_constraintBottom_toTopOf="@id/sp_16" app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_weight="0"/>
        <!-- 뒤로 가기 버튼 -->
        <!-- 아이콘과 탭레이아웃 사이 공간 -->
        <LinearLayout android:id="@+id/sp_16" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintVertical_weight="0" app:layout_constraintBottom_toTopOf="@id/tab_layout" app:layout_constraintTop_toBottomOf="@id/vw_1" android:orientation="horizontal"/>
        <!-- 메뉴 프레임 레이아웃 왼쪽 여백 -->
        <LinearLayout android:id="@+id/sp_18" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@id/sp_16" app:layout_constraintBottom_toTopOf="@id/sp_17" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@id/menu_coffee" app:layout_constraintHorizontal_weight="0" android:orientation="vertical"/>
        <!-- 메뉴 프레임 레이아웃 오른쪽 여백 -->
        <LinearLayout android:id="@+id/sp_19" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@id/sp_16" app:layout_constraintBottom_toTopOf="@id/sp_17" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toRightOf="@id/menu_coffee" app:layout_constraintHorizontal_weight="0" android:orientation="vertical"/>
        <!-- 탭 레이아웃  -->
        <LinearLayout
            android:id="@+id/tab_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/menu_coffee"
            app:layout_constraintLeft_toRightOf="@id/sp_18"
            app:layout_constraintRight_toLeftOf="@id/sp_19"
            app:layout_constraintTop_toBottomOf="@id/sp_16"
            app:layout_constraintVertical_weight="0"
            android:orientation="horizontal" />
        <!-- 커피 프레임 레이아웃 -->
        <FrameLayout
            android:id="@+id/menu_coffee"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/many_shape2"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/sp_17"
            app:layout_constraintLeft_toRightOf="@id/sp_18"
            app:layout_constraintRight_toLeftOf="@id/sp_19"
            app:layout_constraintTop_toBottomOf="@id/tab_layout"
            app:layout_constraintVertical_weight="7"
            app:layout_constraintHorizontal_weight="5">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!-- 가장 큰 -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"

                            android:orientation="vertical">
                            <!-- 한줄씩 메뉴를 감싸는! -->
                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="0dp"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <!--  이거 한줄씩  -->
                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:layout_width="120dp"
                                    android:layout_height="130dp">
                                    <LinearLayout
                                        android:layout_width="120dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">
                                        <ImageButton
                                            android:id="@+id/image"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="3"
                                            android:background="@drawable/yogurtsmot"/>
                                        <TextView
                                            android:id="@+id/name"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:text="플레인요거트"
                                            android:layout_weight="0.6"
                                            android:gravity="center"/>
                                        <TextView
                                            android:id="@+id/price"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:text="4500원"
                                            android:layout_weight="0.6"
                                            android:gravity="center"/>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0"
                                        android:orientation="vertical">
                                        <ImageButton
                                            android:id="@+id/strawsmot_image"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0"
                                            android:background="@drawable/strawberrrysmot"/>
                                        <TextView
                                            android:id="@+id/strawsmot_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:text="딸기요거트"
                                            android:layout_weight="0"
                                            android:gravity="center"/>
                                        <TextView
                                            android:id="@+id/strawsmot_price"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:text="4500원"
                                            android:layout_weight="0"
                                            android:gravity="center"/>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.2"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0"
                                        android:orientation="vertical">
                                        <ImageButton
                                            android:id="@+id/blueberrysmot_image"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="2"
                                            android:background="@drawable/blueberrysmot"/>
                                        <TextView
                                            android:id="@+id/blueberrysmot_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:text="블루베리요거트"
                                            android:layout_weight="0.5"
                                            android:gravity="center"/>
                                        <TextView
                                            android:id="@+id/blueberrysmot_price"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:text="4500원"
                                            android:layout_weight="0.5"
                                            android:gravity="center"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
        <!-- 메뉴 프레임 레이아웃과 아래 공간 여백 -->
        <LinearLayout
            android:id="@+id/sp_17"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="0"
            app:layout_constraintTop_toBottomOf="@id/menu_coffee"
            app:layout_constraintBottom_toBottomOf="parent" android:orientation="vertical"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>