<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".MarketChoice">

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="뒤로가기"
        android:padding="1dp"

        android:scaleType="centerCrop"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/idu"
        android:layout_width="80dp"
        android:layout_height="50dp"

        android:layout_marginStart="48dp"
        android:contentDescription="매장이동"
        android:scaleType="fitCenter"
        android:src="@drawable/idu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매장용"
        android:textSize="8pt"
        android:textColor="#853347"
        app:layout_constraintStart_toEndOf="@+id/idu"
        app:layout_constraintBottom_toBottomOf="@+id/idu"
        app:layout_goneMarginLeft="-10dp"
        />

    <ImageButton
        android:id="@+id/bag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="장바구니"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="2dp"/>

    <ImageButton
        android:id="@+id/bagbag"
        android:visibility="invisible"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="장바구니"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bagbag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="2dp"/>


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="주문기록"
        android:src="@drawable/history_icon"
        android:scaleType="fitCenter"
        android:padding="1dp"
        app:layout_constraintRight_toLeftOf="@+id/bag"
        />


    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="@drawable/bluepot_shape"
        android:contentDescription="1847이동"
        android:padding="1dp"
        android:src="@drawable/coffe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인덕대학교 학술정보센터 1층"
        android:textColor="#7F7F7F"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.63"
        app:layout_constraintHorizontal_bias="0.7"
        />


</androidx.constraintlayout.widget.ConstraintLayout>