<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/vw_1"
        android:layout_width="match_parent" android:layout_height="0dp" android:orientation="horizontal" android:background="@android:color/transparent" app:layout_constraintBottom_toTopOf="@id/sp_16" app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_weight="1">
        <!-- 뒤로 가기 버튼 -->
        <ImageButton android:id="@+id/back_icon" android:layout_width="0dp" android:layout_height="match_parent" android:scaleType="fitCenter" android:background="@android:color/transparent" android:src="@drawable/back_icon" android:padding="1dp" android:layout_weight="1"/>
        <!-- 학교 로고 -->
        <ImageView android:id="@+id/idu" android:layout_width="0dp" android:layout_height="match_parent" android:scaleType="fitCenter" android:src="@drawable/idu" android:layout_marginTop="2dp" android:layout_weight="1"/>
        <!-- 학교 로고와 유저아이콘 사이 여백 -->
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3"/>
        <!-- 유저 아이콘 -->
        <ImageButton android:id="@+id/user" android:layout_width="0dp" android:layout_height="match_parent" android:contentDescription="유저정보" android:padding="1dp" android:scaleType="fitCenter" app:layout_constraintBottom_toBottomOf="parent" android:src="@drawable/jump" app:layout_constraintRight_toLeftOf="@id/bag" android:background="@android:color/transparent" android:layout_weight="1" android:layout_marginTop="2dp" android:layout_marginEnd="2dp"/>
        <!-- 장바구니 아이콘 -->
        <ImageButton android:id="@+id/bag" android:layout_width="0dp" android:layout_height="match_parent" android:contentDescription="장바구니" android:padding="1dp" android:scaleType="fitCenter" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toRightOf="@id/user" android:src="@drawable/bag" android:background="@android:color/transparent" android:layout_weight="1" android:layout_marginTop="2dp" android:layout_marginEnd="2dp"/>
    </LinearLayout>
    <!-- 아이콘과 탭레이아웃 사이 공간 -->
    <LinearLayout android:id="@+id/sp_16" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintVertical_weight="1" app:layout_constraintBottom_toTopOf="@id/tab1_layout" app:layout_constraintTop_toBottomOf="@id/vw_1" android:orientation="horizontal"/>
    <!-- 메뉴 프레임 레이아웃 왼쪽 여백 -->
    <LinearLayout android:id="@+id/sp_18" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@id/sp_16" app:layout_constraintBottom_toTopOf="@id/sp_17" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@id/framelayout" app:layout_constraintHorizontal_weight="0.15" android:orientation="vertical"/>
    <!-- 메뉴 프레임 레이아웃 오른쪽 여백 -->
    <LinearLayout android:id="@+id/sp_19" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@id/sp_16" app:layout_constraintBottom_toTopOf="@id/sp_17" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toRightOf="@id/framelayout" app:layout_constraintHorizontal_weight="0.15" android:orientation="vertical"/>
    <!-- 탭 레이아웃  -->
    <LinearLayout
        android:id="@+id/tab1_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tab2_layout"
        app:layout_constraintLeft_toRightOf="@id/sp_18"
        app:layout_constraintRight_toLeftOf="@id/sp_19"
        app:layout_constraintTop_toBottomOf="@id/sp_16"
        app:layout_constraintVertical_weight="0.7">
        <android.widget.Button
            android:id="@+id/coffee"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/button4"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:text="coffee"/>
        <android.widget.Button
            android:id="@+id/beverage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/button_center"
            android:layout_height="match_parent"
            android:text="beverage"/>
        <android.widget.Button
            android:id="@+id/ade"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_center"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:text="ade"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab2_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/framelayout"
        app:layout_constraintLeft_toRightOf="@id/sp_18"
        app:layout_constraintRight_toLeftOf="@id/sp_19"
        app:layout_constraintTop_toBottomOf="@id/tab1_layout"
        app:layout_constraintVertical_weight="0.7">
    <android.widget.Button
        android:id="@+id/tea"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/button4"
        android:layout_height="match_parent"
        android:textColor="#000000"
        android:text="tea"/>
    <android.widget.Button
        android:id="@+id/smoothie"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:background="@drawable/button_center"
        android:layout_height="match_parent"
        android:text="smoothie"/>
    <android.widget.Button
        android:id="@+id/frappe"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_center"
        android:textColor="#000000"
        android:layout_height="match_parent"
        android:text="frappe"/>
    </LinearLayout>
    <!-- 커피 프레임 레이아웃 -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/framelayout"
        android:layout_height="0dp"
        android:layout_width="0dp"
                android:background="@drawable/many_shape"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:padding="10dp"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/sp_17"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintLeft_toRightOf="@id/sp_18"
        app:layout_constraintRight_toLeftOf="@id/sp_19"
        app:layout_constraintTop_toBottomOf="@id/tab2_layout"
        app:layout_constraintVertical_weight="7"
        app:spanCount="3" />

    <LinearLayout
        android:id="@+id/sp_17"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/framelayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>