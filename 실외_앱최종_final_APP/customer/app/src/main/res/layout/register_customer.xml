            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ca"
            app:layout_constraintRight_toLeftOf="@id/bag"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"/>
        <!-- 장바구니아이콘 -->
        <ImageButton
            android:visibility="invisible"
            android:id="@+id/bag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="장바구니"
            android:padding="1dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/user"
            android:src="@drawable/ca"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/sp_2" android:layout_width="match_parent" android:layout_height="0dp" android:orientation="horizontal" app:layout_constraintBottom_toTopOf="@id/textView3" app:layout_constraintTop_toBottomOf="@id/sp_1" app:layout_constraintVertical_weight="0.5" tools:layout_editor_absoluteX="-16dp"/>
    <LinearLayout android:id="@+id/v2" android:layout_width="match_parent" android:layout_height="0dp" android:orientation="vertical" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintBottom_toTopOf="@+id/zx_1" app:layout_constraintVertical_weight="8" android:gravity="center">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:id="@+id/textViewName" android:layout_width="0dp" android:layout_height="match_parent" android:textSize="19dp" android:layout_marginLeft="10dp" android:text="이름" android:textAlignment="center" android:gravity="center" android:layout_weight="3"/>
            <EditText android:id="@+id/nameEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:ems="10" android:hint="이름" android:layout_marginRight="65dp" android:inputType="text" android:layout_weight="9" tools:ignore="HardcodedText,InOrMmUsage,MissingConstraints"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:id="@+id/textViewId" android:layout_width="0dp" android:layout_height="match_parent" android:text="아이디" android:layout_weight="3" android:layout_marginLeft="10dp" android:textAlignment="center" android:gravity="center" android:textSize="19dp"/>
            <EditText android:id="@+id/idEditText" android:layout_width="@+id/idEditText" android:layout_height="match_parent" android:ems="10" android:hint="아이디" android:inputType="text" android:layout_weight="9"/>
            <android.widget.Button android:id="@+id/button5" android:layout_width="0dp" android:layout_height="match_parent" android:text="중복확인" android:textColor="#000000" android:layout_marginRight="10dp" android:layout_weight="2" android:layout_marginBottom="10dp" tools:ignore="MissingConstraints"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:id="@+id/textViewPw1" android:layout_width="0dp" android:layout_height="match_parent" android:text="비밀번호" android:layout_weight="3" android:layout_marginLeft="10dp" android:textAlignment="center" android:gravity="center" android:textSize="19dp"/>
            <EditText android:id="@+id/editTextText5" android:layout_width="@+id/pwEditText1" android:layout_marginRight="59dp" android:layout_height="wrap_content" android:ems="10" android:hint="비밀번호" android:inputType="textPassword" android:autofillHints="" android:layout_weight="9"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:id="@+id/textViewPw2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="번호확인" android:layout_weight="3" android:textAlignment="center" android:gravity="center" android:textSize="19dp"/>
            <EditText android:id="@+id/editTextTextPassword2" android:layout_width="@+id/pwEditText2" android:layout_height="wrap_content" android:ems="10" android:layout_marginRight="59dp" android:layout_weight="9" android:hint="pw 재입력" android:inputType="textPassword" tools:ignore="MissingConstraints"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:id="@+id/textViewBirth" android:layout_width="0dp" android:layout_height="match_parent" android:text="생년월일" android:textSize="19dp" android:layout_marginLeft="10dp" android:textAlignment="center" android:gravity="center" android:layout_weight="3"/>
            <EditText android:id="@+id/editTextText6" android:layout_width="@+id/birthEditText" android:layout_height="wrap_content" android:layout_marginRight="59dp" android:ems="10" android:hint="생년월일" android:inputType="text" android:layout_weight="9"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:id="@+id/textViewPhon" android:layout_width="0dp" android:layout_height="match_parent" android:text="전화번호" android:layout_marginLeft="10dp" android:textSize="19dp" android:textAlignment="center" android:gravity="center" android:layout_weight="3"/>
            <EditText android:id="@+id/editTextText14" android:layout_width="@+id/phonEditText" android:layout_height="match_parent" android:ems="10" android:hint="숫자만 입력하세요" android:inputType="text" android:text="" android:layout_weight="9"/>
            <android.widget.Button android:id="@+id/button6" android:layout_width="0dp" android:layout_height="match_parent" android:text="인증" android:textColor="#000000" android:layout_weight="2" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" tools:ignore="MissingConstraints"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:id="@+id/textViewPhon2" android:layout_width="0dp" android:layout_height="match_parent" android:text="번호인증" android:layout_marginLeft="10dp" android:textSize="19dp" android:textAlignment="center" android:gravity="center" android:layout_weight="3"/>
            <EditText android:id="@+id/editTextText15" android:layout_width="@+id/phonEditText" android:layout_height="match_parent" android:ems="10" android:hint="숫자만 입력하세요" android:inputType="text" android:text="" android:layout_weight="9"/>
            <android.widget.Button android:id="@+id/button06" android:layout_width="0dp" android:layout_height="match_parent" android:text="확인" android:textColor="#000000" android:layout_weight="2" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" tools:ignore="MissingConstraints"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/vw_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:visibility="gone">
            <TextView android:id="@+id/textViewNum" android:layout_width="0dp" android:layout_height="match_parent" android:text="인증번호" android:layout_weight="3" android:layout_marginLeft="10dp" android:textAlignment="center" android:gravity="center" android:textSize="19dp"/>
            <EditText android:id="@+id/editTextText11" android:layout_width="@+id/numEditText" android:layout_height="match_parent" android:ems="10" android:hint="인증번호" android:inputType="text" android:autofillHints="" android:layout_weight="9"/>
            <android.widget.Button android:id="@+id/button9" android:layout_width="0dp" android:layout_height="match_parent" android:text="확인" android:textColor="#000000" android:layout_weight="2" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" tools:ignore="MissingConstraints"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:id="@+id/textView3" android:layout_width="0dp" android:layout_height="0dp" android:text="회원가입" android:background="#992A42" android:textColor="#FFFFFF" android:textSize="32dp" android:textStyle="bold" android:textAlignment="center" android:gravity="center" app:layout_constraintHorizontal_weight="2" app:layout_constraintVertical_weight="1" app:layout_constraintTop_toBottomOf="@+id/sp_2" app:layout_constraintLeft_toRightOf="@id/a" app:layout_constraintRight_toLeftOf="@id/a1" app:layout_constraintBottom_toTopOf="@id/v2" tools:ignore="MissingConstraints"/>
    <View android:id="@+id/a" android:layout_width="0dp" android:layout_height="5dp" android:background="#853347" app:layout_constraintHorizontal_weight="1" app:layout_constraintRight_toLeftOf="@+id/textView3" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3"/>
    <View android:id="@+id/a1" android:layout_width="0dp" android:layout_height="5dp" android:background="#853347" app:layout_constraintHorizontal_weight="1" app:layout_constraintLeft_toRightOf="@+id/textView3" app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3" app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/zx_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/zx_2"
        app:layout_constraintTop_toBottomOf="@id/v2"
        app:layout_constraintVertical_weight="0"
        android:orientation="horizontal"/>
    <LinearLayout
        android:id="@+id/zx_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/zx_1"
        app:layout_constraintBottom_toTopOf="@+id/btn_register"
        app:layout_constraintVertical_weight="0"
        android:orientation="horizontal"/>
    <LinearLayout android:id="@+id/zx_3" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@id/btn_register" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_weight="1"
        android:orientation="horizontal"/>
    <android.widget.Button android:id="@+id/btn_register" android:layout_width="0dp" android:layout_height="0dp" android:background="#CF7488" android:text="회원가입" android:textSize="24dp" android:textColor="#ffffff" app:layout_constraintHorizontal_weight="2" app:layout_constraintVertical_weight="1" app:layout_constraintBottom_toTopOf="@id/zx_3" app:layout_constraintTop_toBottomOf="@id/zx_2" app:layout_constraintLeft_toRightOf="@id/pay1" app:layout_constraintRight_toLeftOf="@id/pay2" app:layout_constraintVertical_bias="1"/>
    <View android:id="@+id/pay1" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintHorizontal_weight="1" app:layout_constraintRight_toLeftOf="@+id/btn_register" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/btn_register" app:layout_constraintBottom_toBottomOf="@+id/btn_register"/>
    <View android:id="@+id/pay2" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintHorizontal_weight="1" app:layout_constraintLeft_toRightOf="@+id/btn_register" app:layout_constraintTop_toTopOf="@+id/btn_register" app:layout_constraintBottom_toBottomOf="@+id/btn_register" app:layout_constraintRight_toRightOf="parent"/>
    <View android:id="@+id/b1" android:layout_width="0dp" android:layout_height="5dp" android:background="#853347" app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintVertical_bias="0.95"/>
</androidx.constraintlayout.widget.ConstraintLayout>