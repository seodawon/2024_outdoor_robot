<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/blank"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.1"
        app:layout_constraintBottom_toTopOf="@id/confirm"
        app:layout_constraintTop_toBottomOf="@id/top2"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirm"
        app:layout_constraintTop_toBottomOf="@id/blank"
        app:layout_constraintBottom_toTopOf="@id/blank_forth"
        android:visibility="visible"
        app:layout_constraintVertical_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/many_shape"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/top3"
            app:layout_constraintTop_toTopOf="@id/confirm"

            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#853347"
                android:text="주문하기"
                android:textColor="#FFFFFF"
                android:textSize="15pt"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/top6"
            app:layout_constraintTop_toTopOf="@id/confirm"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2"
            android:gravity="right"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/top4"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="#853347"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/confirm">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"/>
            <android.widget.Button
                android:id="@+id/order"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="주문확인"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="12pt"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:layout_weight="3"
                android:gravity="center" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.7"/>
            <android.widget.Button
                android:id="@+id/addButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="추가주문"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="12pt"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:layout_weight="3"
                android:gravity="center" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <ListView
            android:id="@+id/order_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="7"
            app:layout_constraintBottom_toTopOf="@+id/top4"
            app:layout_constraintTop_toBottomOf="@+id/top3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/blank_forth"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1.3"
        app:layout_constraintTop_toBottomOf="@id/confirm"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/blank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1.2"
        android:id="@+id/top2"
        android:layout_height="0dp">
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="뒤로가기"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/imageView4"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintRight_toLeftOf="@id/imageButton6"
            app:layout_constraintLeft_toRightOf="@id/imageButton4"
            android:layout_marginStart="53dp"
            android:contentDescription="관리자용 로그인창으로 이동"
            android:scaleType="fitStart"
            android:src="@drawable/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="관리자용 로그인창으로 이동"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jump"
            app:layout_constraintRight_toLeftOf="@id/imageButton5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="2dp"/>

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="2dp"
            android:contentDescription="관리자용 로그인창으로 이동"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bag"
            app:layout_constraintLeft_toRightOf="@id/imageButton6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>