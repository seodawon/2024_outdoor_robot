<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".HistoryOrder">

    <FrameLayout
        android:visibility="visible"
        android:id="@+id/before_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <View
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/many_shape">
        </View>
        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="주문기록"
            android:textSize="15pt"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:background="#992A42" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/americano">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="메뉴명\n가격\n요청사항"
                            android:textColor="#000000"
                            android:textSize="10pt" />


                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="배달완료"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="10pt"
                    android:background="#DAB4BC"/>
                <View
                    android:layout_width="350dp"
                    android:layout_height="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#DAB4BC"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    >

                </View>
            </LinearLayout>

        </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:background="#992A42">


            <LinearLayout

                android:layout_weight="1"
                android:layout_width="350dp"
                android:layout_height="match_parent"

                >
        <TextView

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="전체 "
            android:textColor="#FFFFFF"
            android:textSize="10pt"
            android:gravity="bottom" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="숫자"
                android:textColor="#FFFFFF"
                android:textSize="12pt" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=" 건"
                android:textColor="#FFFFFF"
                android:textSize="10pt"
                android:gravity="right|bottom"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="right">
            <TextView

                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="전체금액: "
                android:textColor="#FFFFFF"
                android:textSize="10pt"
                android:gravity="bottom|right"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="금액"
                android:textColor="#FFFFFF"
                android:textSize="12pt"
                android:gravity="bottom"
                >
            </TextView>
            <TextView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="원"
                android:textColor="#FFFFFF"
                android:textSize="10pt"
                android:gravity="right|bottom"
                >
            </TextView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>



    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="뒤로가기"
        android:padding="1dp"

        android:scaleType="centerCrop"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/idu"
        android:layout_width="80dp"
        android:layout_height="50dp"

        android:layout_marginStart="48dp"
        android:contentDescription="매장이동"
        android:scaleType="fitCenter"
        android:src="@drawable/idu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매장용"
        android:textSize="8pt"
        android:textColor="#853347"
        app:layout_constraintStart_toEndOf="@+id/idu"
        app:layout_constraintBottom_toBottomOf="@+id/idu"
        app:layout_goneMarginLeft="-10dp"
        />

    <ImageButton
        android:id="@+id/bag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="장바구니"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="2dp"/>

    <ImageButton
        android:id="@+id/bagbag"
        android:visibility="invisible"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="장바구니"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bagbag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="2dp"/>


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="주문기록"
        android:src="@drawable/history_icon"
        android:scaleType="fitCenter"
        android:padding="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bag"
        />









</androidx.constraintlayout.widget.ConstraintLayout>