<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="left|center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn1"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back"
            android:gravity="bottom"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>


        <ImageView
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:gravity="bottom"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/idu" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="#750B29"
            android:text="관리자용" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <!--    관리자 로그인 레이아웃   -->

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="4dp"
            app:layout_constraintVertical_bias="0.12"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/txt1"
            android:background="#750B29" />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_weight="2"
            android:background="#750B29"
            android:text="관리자 로그인"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/view1"
            app:layout_constraintRight_toLeftOf="@+id/view2"
            />
        <View
            android:id="@+id/view2"
            android:background="#750B29"
            android:layout_height="4dp"
            android:layout_width="0dp"
            app:layout_constraintVertical_bias="0.12"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/txt1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

<!--    아이디 레이아웃   -->

        <TextView
            android:id="@+id/txt2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="30dp"
            android:textColor="#750B29"
            android:textStyle="bold"
            android:gravity="center"
            android:text="아이디"
            app:layout_constraintVertical_bias="0.35"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <EditText
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/memo_border"
            android:layout_marginRight="30dp"
            android:hint="  아이디를 입력하세요"
            app:layout_constraintVertical_bias="0.35"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/txt2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <!--    비밀번호 레이아웃   -->

        <TextView
            android:id="@+id/txt3"
            android:layout_width="@+id/txt2"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:textSize="30dp"
            android:textColor="#750B29"
            android:textStyle="bold"
            android:gravity="center"
            android:text="비밀번호"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/passwd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt2"
            />
        <EditText
            android:id="@+id/passwd"
            android:layout_width="@+id/id"
            android:layout_height="40dp"
            android:background="@drawable/memo_border"
            android:inputType="textPassword"
            android:hint="  비밀번호를 입력하세요"
            android:layout_marginRight="30dp"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintLeft_toRightOf="@+id/txt3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id"
            />

        <!--    관리자 레이아웃   -->

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:background="#750B29"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <View
            android:id="@+id/view3"
            android:background="#750B29"
            android:layout_height="4dp"
            android:layout_width="0dp"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
