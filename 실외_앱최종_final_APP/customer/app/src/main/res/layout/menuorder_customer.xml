<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/blank"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.1"
        app:layout_constraintBottom_toTopOf="@id/confirm"
        app:layout_constraintTop_toBottomOf="@id/top2"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirm"
        app:layout_constraintTop_toBottomOf="@id/blank"
        app:layout_constraintBottom_toTopOf="@id/blank_forth"
        android:visibility="visible"
        app:layout_constraintVertical_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/many_shape"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/top3"
            app:layout_constraintTop_toTopOf="@id/confirm"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#853347"
                android:text="주문하기"
                android:textColor="#FFFFFF"
                android:textSize="15pt"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/top6"
            app:layout_constraintTop_toTopOf="@id/confirm"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2"
            android:gravity="right">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/close"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"
                android:padding="1dp"
                android:layout_marginTop="5dp"
                android:contentDescription="close"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/top4"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            app:layout_constraintTop_toBottomOf="@id/top5"
            android:background="#853347"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/confirm">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"/>
            <android.widget.Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="주문확인"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="12pt"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:layout_weight="3"
                android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.7"/>
            <android.widget.Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="추가주문"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="12pt"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:layout_weight="3"
                android:gravity="center" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/top5"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top3"
            app:layout_constraintBottom_toTopOf="@id/top4"
            android:layout_gravity="bottom">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="440dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/americano"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:text="메뉴명\n가격\n요청사항"
                                    android:textColor="#000000"
                                    android:textSize="8pt" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#DAB4BC"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/blank_forth"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1.3"
        app:layout_constraintTop_toBottomOf="@id/confirm"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/blank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1.2"
        android:id="@+id/top2"
        android:layout_height="0dp">
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/app_btn_back"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/imageView4"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintRight_toLeftOf="@id/imageButton6"
            app:layout_constraintLeft_toRightOf="@id/imageButton4"
            android:layout_marginStart="53dp"
            android:contentDescription="@string/app_Go_market"
            android:scaleType="fitStart"
            android:src="@drawable/idu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/app_Go_manager"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/list"
            app:layout_constraintRight_toLeftOf="@id/imageButton5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="2dp"/>

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="2dp"
            android:contentDescription="@string/app_Go_manager"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bag"
            app:layout_constraintLeft_toRightOf="@id/imageButton6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>