<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dddd">



    <!--맨 위 아이콘 셋-->
    <LinearLayout
        android:id="@+id/sp_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/sp_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">
        <!--뒤로 가기 아이콘-->
        <ImageButton
            android:id="@+id/back_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/back_icon"
            android:padding="1dp"
            android:layout_weight="0.7"
            />
        <!--학교 로고-->
        <ImageView
            android:id="@+id/idu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/idu"
            android:layout_marginTop="2dp"
            android:layout_weight="0.7"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="매장용"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_marginBottom="5dp"
            android:gravity="bottom"
            android:textColor="#853347"/>
        <!--학교로고와 유저아이콘 사이 여백-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>
    <!--맨위와 1847버튼 사이 여백-->
    <LinearLayout
        android:id="@+id/sp_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sp_1"
        app:layout_constraintBottom_toTopOf="@id/textView6"
        app:layout_constraintVertical_weight="0.5"
        android:orientation="horizontal"
        />
    <LinearLayout
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/card"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:entries="@array/결제" />

                    <EditText
                        android:id="@+id/cardEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:autofillHints=""
                        android:layout_weight="9"
                        android:ems="10"
                        android:hint="카드번호"
                        android:inputType="text"
                        android:text=""
                        android:textSize="24dp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/f"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewAdress"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="도착지"
                        android:textSize="24dp"
                        android:layout_weight="3.5"
                        android:textAlignment="center"
                        android:gravity="center"
                        tools:ignore="MissingConstraints" />

                    <Spinner
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:entries="@array/address_array"
                        android:layout_weight="9"
                        />
                </LinearLayout>

                <ListView
                    android:id="@+id/pay_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/f" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/a"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#853347"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        />
    <View
        android:id="@+id/a1"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#853347"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#992A42"
        android:textAlignment="center"
        android:gravity="center"
        android:text="결제하기"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintLeft_toRightOf="@id/a"
        app:layout_constraintRight_toLeftOf="@id/a1"
        app:layout_constraintTop_toBottomOf="@id/sp_2"
        app:layout_constraintVertical_weight="1" />
    <LinearLayout
        android:id="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:orientation="horizontal"/>
    <android.widget.Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CF7488"
        android:text="결제하기"
        android:textSize="24dp"
        android:textColor="#ffffff"
        app:layout_constraintVertical_weight="0.8"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/imageButton18"
        app:layout_constraintBottom_toTopOf="@id/v5"
        app:layout_constraintLeft_toRightOf="@id/pay1"
        app:layout_constraintRight_toLeftOf="@id/pay2"
        tools:ignore="MissingConstraints" />


    <ImageButton
        android:id="@+id/pay1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="30dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pay"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/button"
        app:layout_constraintLeft_toRightOf="@+id/pay3"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        />
    <View
        android:id="@+id/pay2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toRightOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintRight_toRightOf="parent"
        />
    <View
        android:id="@+id/pay3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintRight_toLeftOf="@+id/pay1"
        />
    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="or"
        android:textSize="24dp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintTop_toBottomOf="@id/scrollView2"
        app:layout_constraintLeft_toRightOf="@id/b"
        app:layout_constraintRight_toLeftOf="@id/b2"
        app:layout_constraintBottom_toTopOf="@+id/imageButton18"
        app:layout_constraintVertical_weight="0.7"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/b"
        android:layout_width="0dp"
        android:layout_height="@+id/textView13"
        android:background="@drawable/dash_line"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/textView13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        />
    <View
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="@+id/textView13"
        android:background="@drawable/dash_line"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/imageButton18"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintRight_toLeftOf="@id/kakao1"
        app:layout_constraintLeft_toRightOf="@id/kakao"
        app:layout_constraintVertical_weight="0.8"/>

    <View
        android:id="@+id/kakao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="right"
        app:layout_constraintRight_toLeftOf="@+id/imageButton18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButton18"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton18"
        />
    <TextView
        android:id="@+id/kakao1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right"
        android:text="원"
        android:textSize="25sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/imageButton18"
        app:layout_constraintTop_toTopOf="@+id/imageButton18"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton18"
        app:layout_constraintRight_toRightOf="parent"
        />
    <View
        android:id="@+id/b1"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#853347"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.95"
        />


</androidx.constraintlayout.widget.ConstraintLayout>