<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".menu_detail_customer">
    <!-- 맨 위 버튼 셋들 -->
    <LinearLayout android:id="@+id/vw_1" android:layout_width="match_parent" android:layout_height="0dp" android:orientation="horizontal" app:layout_constraintBottom_toTopOf="@id/sp_3" app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_weight="1">
        <!-- 뒤로가기 버튼 -->
        <ImageButton android:id="@+id/back_icon" android:layout_width="0dp" android:layout_height="match_parent" android:background="@android:color/transparent" android:scaleType="fitCenter" android:src="@drawable/back_icon" android:padding="1dp" android:layout_weight="1"/>
        <!-- 학교 로고 -->
        <ImageView android:id="@+id/idu" android:layout_width="0dp" android:layout_height="match_parent" android:scaleType="fitCenter" android:src="@drawable/idu" android:layout_marginTop="2dp" android:layout_weight="1"/>
        <!-- 학교 로고와 유저 아이콘 사이 여백 -->
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3"/>
        <!-- 유저아이콘 -->
        <ImageButton
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="유저정보"
            android:padding="1dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/jump"
            app:layout_constraintRight_toLeftOf="parent"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"/>
    </LinearLayout>
    <!-- 맨 위 아이콘과 메뉴 상세선택창 사이 여백 -->
    <LinearLayout android:id="@+id/sp_3" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toBottomOf="@id/vw_1" app:layout_constraintBottom_toTopOf="@id/vw_2" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintVertical_weight="0.5" android:orientation="horizontal"/>
    <!-- 상세선택창 왼쪽 바깥 여백 -->
    <LinearLayout android:id="@+id/sp_1" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintRight_toLeftOf="@id/vw_2" app:layout_constraintTop_toBottomOf="@id/vw_1" app:layout_constraintBottom_toTopOf="@id/vw_3" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_weight="0.2" android:background="#000000" android:orientation="horizontal"/>
    <!-- 상세선택창 가운데 프레임 레이아웃 -->
    <View android:id="@+id/vw_2" android:layout_width="0dp" android:layout_height="0dp" android:background="@drawable/many_shape" app:layout_constraintBottom_toTopOf="@id/vw_3" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintLeft_toRightOf="@id/sp_1" app:layout_constraintRight_toLeftOf="@id/sp_2" app:layout_constraintTop_toBottomOf="@id/sp_3" app:layout_constraintVertical_weight="8" app:layout_constraintHorizontal_weight="5"> </View>
    <!-- 상세선택창 오른쪽 바깥 여백 -->
    <LinearLayout android:id="@+id/sp_2" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toBottomOf="@id/vw_1" app:layout_constraintBottom_toTopOf="@id/vw_3" app:layout_constraintLeft_toRightOf="@id/vw_2" app:layout_constraintHorizontal_weight="0.2" android:background="#000000" android:orientation="horizontal"/>
    <!-- 상세선택 내부 사진 왼쪽 여백 -->
    <LinearLayout
        android:id="@+id/sp_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/vw_2"
        app:layout_constraintRight_toLeftOf="@id/detail_image"
        app:layout_constraintBottom_toTopOf="@id/sp_5"
        app:layout_constraintTop_toTopOf="@id/vw_2"
        app:layout_constraintHorizontal_weight="1"
        android:orientation="horizontal"/>
    <!-- 상세 메뉴 사진 -->
    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/vw_2"
        app:layout_constraintBottom_toTopOf="@id/sp_5"
        app:layout_constraintLeft_toRightOf="@id/sp_6"
        app:layout_constraintRight_toLeftOf="@id/sp_8"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintVertical_weight="3"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:src="@drawable/esfre"/>
    <!-- 메뉴 사진과 메뉴 정보/수량 사이 여백 -->
    <LinearLayout
        android:id="@+id/sp_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="@id/detail_infor"
        app:layout_constraintLeft_toRightOf="@id/detail_image"
        app:layout_constraintBottom_toTopOf="@id/sp_5"
        app:layout_constraintTop_toTopOf="@id/vw_2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        android:orientation="vertical"/>
    <!-- 메뉴 정보/수량 포함된 레이아웃 -->
    <LinearLayout
        android:id="@+id/detail_infor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/vw_2"
        app:layout_constraintBottom_toTopOf="@id/sp_5"
        app:layout_constraintRight_toLeftOf="@id/sp_7"
        app:layout_constraintLeft_toRightOf="@id/sp_8"
        app:layout_constraintHorizontal_weight="4">
        <!--  메뉴 정보 레이아웃 -->
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="에스프레소"
            android:gravity="bottom"
            android:textSize="10pt"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="1800원"
            android:gravity="top"
            android:textSize="10pt"
            android:layout_weight="2"/>
        <!-- 수량 아이콘 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:layout_weight="2">
            <!-- 증가 아이콘 -->
            <ImageButton
                android:id="@+id/add_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/add"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:background="@android:color/transparent"/>
            <!-- 수량 표시 아이콘 -->
            <TextView
                android:id="@+id/number_icon"
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="25sp"
                android:gravity="center"
                android:text="1"
                android:layout_height="match_parent"
                android:background="@drawable/st_shape"
                android:layout_weight="1"
                android:src="@drawable/st_shape"/>
            <!-- 감소아이콘 -->
            <ImageButton
                android:id="@+id/minus_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/minus"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
    <!-- 메뉴 정보 내부 오른쪽 여백 -->
    <LinearLayout
        android:id="@+id/sp_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@id/vw_2"
        app:layout_constraintLeft_toRightOf="@id/detail_infor"
        app:layout_constraintBottom_toTopOf="@id/sp_5"
        app:layout_constraintTop_toTopOf="@id/vw_2" app:layout_constraintHorizontal_weight="1" app:layout_constraintVertical_weight="1" android:orientation="vertical"/>
    <!-- 메뉴 아래와 상세정보 체크박스 선택창 사이 여백 -->
    <LinearLayout android:id="@+id/sp_5" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@id/detail_image" app:layout_constraintLeft_toLeftOf="@id/vw_2" app:layout_constraintRight_toRightOf="@id/vw_2" app:layout_constraintBottom_toTopOf="@id/detail_scroll" app:layout_constraintVertical_weight="1" android:orientation="vertical"/>
    <!-- 체크박스 왼쪽 여백 -->
    <LinearLayout android:id="@+id/sp_9" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintLeft_toLeftOf="@id/vw_2" app:layout_constraintRight_toLeftOf="@id/detail_scroll" app:layout_constraintBottom_toTopOf="@id/vw_3" app:layout_constraintTop_toTopOf="@id/detail_scroll" app:layout_constraintHorizontal_weight="0.5" android:orientation="horizontal"/>
    <!-- 체크박스 오른쪽 여 -->
    <LinearLayout android:id="@+id/sp_10" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintRight_toRightOf="@id/vw_2" app:layout_constraintLeft_toRightOf="@id/detail_scroll" app:layout_constraintBottom_toTopOf="@id/vw_3" app:layout_constraintTop_toTopOf="@id/detail_scroll" app:layout_constraintHorizontal_weight="0.5" android:orientation="horizontal"/>
    <!-- 상세메뉴 프레임 레이아웃 -->
    <ScrollView android:id="@+id/detail_scroll" android:layout_width="0dp" android:layout_height="0dp" android:fillViewport="true" app:layout_constraintBottom_toTopOf="@id/vw_3" app:layout_constraintLeft_toRightOf="@id/sp_9" app:layout_constraintRight_toLeftOf="@id/sp_10" app:layout_constraintTop_toBottomOf="@id/sp_5" app:layout_constraintVertical_weight="6" app:layout_constraintHorizontal_weight="5">
        <FrameLayout android:id="@+id/menu_detail"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:layout_constraintBottom_toTopOf="@id/vw_3"
            app:layout_constraintLeft_toRightOf="@id/sp_9"
            app:layout_constraintRight_toLeftOf="@id/sp_10"
            app:layout_constraintTop_toBottomOf="@id/sp_5"
            app:layout_constraintVertical_weight="6"
            app:layout_constraintHorizontal_weight="5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textview01"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#DAB4BC"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="8pt" />
                    <RadioGroup
                        android:id="@+id/radiogroup1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:background="@drawable/st_shape">
                        <RadioButton
                            android:id="@+id/radiobutton1_1"
                            android:text="아이스"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:checked="true" />
                        <RadioButton
                            android:id="@+id/radiobutton1_2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="핫"
                            android:layout_height="match_parent"
                            android:checked="false" />
                    </RadioGroup>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                    <TextView
                        android:id="@+id/textview02"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#DAB4BC"
                        android:text=" 농도"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="8pt" />
                    <RadioGroup
                        android:id="@+id/radiogroup2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:background="@drawable/st_shape">
                        <RadioButton
                            android:id="@+id/radiobutton2_1"
                            android:text="선택없음"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:checked="true" />
                        <RadioButton
                            android:id="@+id/radiobutton2_2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="연하게"
                            android:layout_height="match_parent"
                            android:checked="false" />
                    </RadioGroup>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                    <TextView
                        android:id="@+id/textview03"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=" 샷추가(+500원)"
                        android:background="#DAB4BC"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="8pt" />
                    <RadioGroup
                        android:id="@+id/radiogroup3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:background="@drawable/st_shape">
                        <RadioButton
                            android:id="@+id/radiobutton3_1"
                            android:text="선택없음"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:checked="true" />
                        <RadioButton
                            android:id="@+id/radiobutton3_2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="샷 추가"
                            android:layout_height="match_parent"
                            android:checked="false" />
                    </RadioGroup>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                    <TextView
                        android:id="@+id/textview04"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#DAB4BC"
                        android:text=" 시럽추가(+500원)"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="8pt" />
                    <RadioGroup
                        android:id="@+id/radiogroup4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:background="@drawable/st_shape">
                        <RadioButton
                            android:id="@+id/radiobutton4_1"
                            android:text="선택없음"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:checked="true" />
                        <RadioButton
                            android:id="@+id/radiobutton4_2"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:text="바닐라시럽추가"
                            android:checked="false" />
                        <RadioButton
                            android:id="@+id/radiobutton4_3"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:text="카라멜시럽추가"
                            android:checked="false" />
                        <RadioButton
                            android:id="@+id/radiobutton4_4"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:text="헤이즐넛시럽추가"
                            android:checked="false" />

                    </RadioGroup>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </ScrollView>
    <!--     하단의 빨간 뷰 -->
    <View android:id="@+id/vw_3" android:layout_width="match_parent" android:layout_height="0dp" android:background="#853347" app:layout_constraintTop_toBottomOf="@id/vw_2" app:layout_constraintBottom_toBottomOf="parent" android:gravity="center_horizontal" app:layout_constraintVertical_weight="1"/>
    <!-- 빨간 내부 왼쪽 여백 -->
    <LinearLayout android:id="@+id/sp_12" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@id/vw_3" app:layout_constraintBottom_toBottomOf="@id/vw_3" app:layout_constraintLeft_toLeftOf="@id/vw_3" app:layout_constraintRight_toLeftOf="@id/rewrite_button" app:layout_constraintHorizontal_weight="0.5" android:orientation="horizontal"/>
    <!-- 빨간 뷰 내부 오른쪽 여백 -->
    <LinearLayout android:id="@+id/sp_13" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@id/vw_3" app:layout_constraintBottom_toBottomOf="@id/vw_3" app:layout_constraintRight_toRightOf="@id/vw_3" app:layout_constraintLeft_toRightOf="@id/order_button" app:layout_constraintHorizontal_weight="0.5" android:orientation="horizontal"/>
    <!--     내부 위쪽 여백(장바구니 담기) -->
    <LinearLayout android:id="@+id/sp_14" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintTop_toTopOf="@id/vw_3" app:layout_constraintBottom_toTopOf="@id/rewrite_button" android:orientation="vertical" app:layout_constraintVertical_weight="0.5"/>
    <!--     내부 아래쪽 여백(장바구니 담기) -->
    <LinearLayout android:id="@+id/sp_15" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@id/rewrite_button" app:layout_constraintBottom_toBottomOf="@id/vw_3" android:orientation="vertical" app:layout_constraintVertical_weight="0.5"/>
    <!--     내부 위쪽 여백(장바구니 담기) -->
    <LinearLayout android:id="@+id/sp_16" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintTop_toTopOf="@id/vw_3" app:layout_constraintBottom_toTopOf="@id/order_button" android:orientation="vertical" app:layout_constraintVertical_weight="0.5"/>
    <!--     내부 아래쪽 여백(장바구니 담기) -->
    <LinearLayout android:id="@+id/sp_17" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@id/order_button" app:layout_constraintBottom_toBottomOf="@id/vw_3" android:orientation="vertical" app:layout_constraintVertical_weight="0.5"/>
    <!-- 장바구니 담기 버튼 -->
    <android.widget.Button
        android:id="@+id/rewrite_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="수정하기"
        android:background="#EDF3FF"
        android:textSize="10pt"
        app:layout_constraintTop_toBottomOf="@id/sp_14"
        app:layout_constraintBottom_toTopOf="@id/sp_15"
        app:layout_constraintRight_toLeftOf="@+id/sp_11"
        app:layout_constraintLeft_toRightOf="@id/sp_12"
        app:layout_constraintHorizontal_weight="2.3"
        app:layout_constraintVertical_weight="1"/>
    <!--     장바구니담기와 주문하기 버튼 사이 여백 -->
    <LinearLayout
        android:id="@+id/sp_11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/vw_3"
        app:layout_constraintBottom_toBottomOf="@id/vw_3"
        app:layout_constraintLeft_toRightOf="@id/rewrite_button"
        app:layout_constraintRight_toLeftOf="@id/order_button"
        app:layout_constraintHorizontal_weight="0"
        android:orientation="horizontal"/>
    <!-- 주문하기 버튼 -->
    <android.widget.Button
        android:id="@+id/order_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="주문하기"
        app:layout_constraintTop_toBottomOf="@id/sp_16"
        app:layout_constraintBottom_toTopOf="@id/sp_17"
        app:layout_constraintLeft_toRightOf="@id/sp_11"
        app:layout_constraintRight_toLeftOf="@id/sp_13"
        android:background="#FFFFFF" android:textSize="10pt"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintVertical_weight="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>