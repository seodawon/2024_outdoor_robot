<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".marketChoice_Market">
    <!--맨 위 아이콘 셋-->
    <LinearLayout
        android:id="@+id/sp_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/sp_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">
        <!--뒤로 가기 아이콘-->
        <ImageButton
            android:id="@+id/back_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/back_icon"
            android:padding="1dp"
            android:layout_weight="1"
            />
        <!--학교 로고-->
        <ImageView
            android:id="@+id/idu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/idu"
            android:layout_marginTop="2dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="매장용"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:gravity="bottom"

            android:textColor="#853347"/>
        <!--학교로고와 유저아이콘 사이 여백-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
        <!--영수증아이콘(주문기록)-->
        <ImageButton
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/history_icon"
            app:layout_constraintRight_toLeftOf="@id/bag"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"

            />
    </LinearLayout>
<!--맨위와 1847버튼 사이 여백-->
    <LinearLayout
        android:id="@+id/sp_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sp_1"
        app:layout_constraintBottom_toTopOf="@id/coffe_button"
        app:layout_constraintVertical_weight="3"
        android:orientation="horizontal"
        />
<!--1847 하단 여백-->
    <LinearLayout
        android:id="@+id/sp_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/coffe_button"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintVertical_weight="3"
        android:orientation="horizontal"
        />
<!--1847 왼쪽 여백-->
    <LinearLayout
        android:id="@+id/sp_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sp_2"
        app:layout_constraintBottom_toTopOf="@id/sp_3"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/coffe_button"
        app:layout_constraintHorizontal_weight="0.5"
        android:orientation="horizontal"
        />
<!--1847 오른쪽 여백-->
    <LinearLayout
        android:id="@+id/sp_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sp_2"
        app:layout_constraintBottom_toTopOf="@id/sp_3"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/coffe_button"
        app:layout_constraintHorizontal_weight="0.5"
        android:orientation="horizontal"
        />

    <!--1847버튼-->
    <ImageButton
        android:id="@+id/coffe_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bluepot_shape"
        android:contentDescription="1847이동"
        app:layout_constraintVertical_weight="5"
        app:layout_constraintHorizontal_weight="4"
        android:padding="1dp"
        android:src="@drawable/coffe"
        app:layout_constraintRight_toLeftOf="@id/sp_5"
        app:layout_constraintLeft_toRightOf="@id/sp_4"
        app:layout_constraintBottom_toTopOf="@id/sp_3"
        app:layout_constraintTop_toBottomOf="@id/sp_2"
        />

<!--1847 주소-->
    <TextView
        android:id="@+id/coffe_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인덕대학교 학술정보센터 1층"
        android:textColor="#7F7F7F"
        android:textSize="10pt"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="@id/coffe_button"
        app:layout_constraintTop_toTopOf="@id/coffe_button"
        app:layout_constraintRight_toRightOf="@id/coffe_button"
        app:layout_constraintBottom_toBottomOf="@id/coffe_button"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.8"
        />


</androidx.constraintlayout.widget.ConstraintLayout>